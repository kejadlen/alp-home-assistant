{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",

    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": [ "./src/**/*" ],
  "exclude": [".DS_Store"]
}
